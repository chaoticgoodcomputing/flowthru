{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "test-flights",
  "sourceRoot": "tests/Flowthru.Tests.KedroSpaceflights",
  "targets": {
    "run": {
      "//": "Run the Spaceflights tests. Defaults to full setup, but the name of a pipeline can be passed in as an argument to run a specific pipeline.",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "dotnet run"
        ],
        "cwd": "tests/Flowthru.Tests.KedroSpaceflights",
        "parallel": false
      }
    },
    "purge": {
      "//": "Purges all auto-generated data files from the project",
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "find Data/Datasets/02_Cleaned -mindepth 1 -type f ! -name '.gitkeep' -delete",
          "find Data/Datasets/03_TrainingData -mindepth 1 -type f ! -name '.gitkeep' -delete",
          "find Data/Datasets/04_Models -mindepth 1 -type f ! -name '.gitkeep' -delete",
          "find Data/Datasets/05_ModelOutput -mindepth 1 -type f ! -name '.gitkeep' -delete",
        ],
        "cwd": "tests/Flowthru.Tests.KedroSpaceflights",
        "parallel": false
      }
    },
  }
}
